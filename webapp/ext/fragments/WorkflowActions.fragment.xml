<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <Title text="Workflow and Actions" level="H4"/>
        <Text text="Lightweight workflow signals and actions for demo purposes."/>
        <ObjectStatus text="{ui>/workflowStage}" state="Warning"/>
        <Text text="Last action: {ui>/lastAction}"/>
        <HBox class="sapUiSmallMarginTop">
            <Button text="Request Quote" type="Emphasized" press="onRequestQuote"/>
            <Button text="Flag Supplier" type="Transparent" press="onFlagSupplier" class="sapUiTinyMarginBegin"/>
        </HBox>
    </VBox>
</core:FragmentDefinition>
