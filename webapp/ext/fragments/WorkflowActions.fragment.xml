<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <Title text="Workflow and Actions" level="H4"/>
        <Text text="Lightweight workflow signals and actions for demo purposes."/>
        <ObjectStatus text="{ui>/workflowStage}" state="Warning"/>
        <Text text="Last action: {ui>/lastAction}"/>
        <OverflowToolbar class="sapUiSmallMarginTop">
            <Button
                text="Request Quote"
                type="Emphasized"
                press="onRequestQuote"
                enabled="{= +${Stock} &lt; 50 }"/>
            <Button
                text="Flag Supplier"
                type="Transparent"
                press="onFlagSupplier"
                priority="AlwaysOverflow"
                visible="{= +${Stock} &lt;= 20 }"/>
        </OverflowToolbar>
    </VBox>
</core:FragmentDefinition>
